<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">230px</item>
        <item name="android:layout_height">90px</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#c0c0c0</item>
    </style>

    <style name="name_value_button">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">90px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:background">@color/colorGrayDark</item>
    </style>
    <style name="name_value_editext">
        <item name="android:layout_width">500px</item>
        <item name="android:layout_height">90px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:layout_marginLeft">80px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/select_valueshap</item>
    </style>
</resources>
